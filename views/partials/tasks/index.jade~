extends ../../layout


block content
  -if(typeof flash != 'undefined')
    p Wha...?
    -if(flash.info)
    p= flash.info
  h1= title
  p Welcome to #{title}
  a(href="/tasks/new") New Task
  br
  br
  -if(docs.length)
    b Tasks
    table
      each doc in docs
        tr
          td #{doc.task} 
        td
          a(href="#/tasks/#{doc.id}") View
        td
          a(href="#/tasks/#{doc.id}/edit") Edit
        td
          a(href="#/tasks/#{doc.id}/delete") DELETE
  -else
    b
      mark No Task Documents Were Found!
  br
  br
  a(href="#/tasks/new") New Task
